{
	"extends": [
		"next/core-web-vitals",
		"plugin:react/recommended",
		"../server/.eslintrc.json"
	],
	"plugins": ["react"],
	"ignorePatterns": ["node_modules/", "jest.config.js", "__tests__"],
	"rules": {
		"react/react-in-jsx-scope": "off",
		"react/sort-prop-types": "warn",
		"react/jsx-props-no-multi-spaces": "warn",
		"react/jsx-max-props-per-line": [
			"error",
			{ "maximum": 3, "when": "multiline" }
		],
		"react/jsx-key": "error",
		"react/jsx-indent-props": ["warn", "tab"],
		"react/jsx-curly-spacing": [
			"warn",
			{ "when": "never", "children": false }
		],
		"react/jsx-indent": ["warn", "tab"],
		"unused-imports/no-unused-imports": "error",
		"no-restricted-imports": [
			"error",
			{
				"paths": [
					{
						"name": "react-query",
						"importNames": [
							"useQueryClient",
							"useQuery",
							"useInfiniteQuery",
							"useQueries"
						],
						"message": "Use wrapper functions provided by src/api/query"
					},
					{
						"name": "react-query",
						"importNames": ["QueryClient", "dehydrate"],
						"message": "Use SSR wrapping function provided by src/ssr"
					},
					{
						"name": "@mui/material",
						"importNames": ["Link"],
						"message": "Use Link from 'next/router"
					},
					{
						"name": "@mui/material",
						"importNames": ["Modal"],
						"message": "Use 'confirm' from 'material-ui-confirm'"
					},
					{
						"name": "@mui/material",
						"importNames": ["ThemeProvider"],
						"message": "Use wrapper from theme/provider"
					},
					{
						"name": "next",
						"importNames": [
							"GetServerSidePropsContext",
							"InferGetServerSidePropsType"
						],
						"message": "Use wrapper functions provided by src/ssr"
					},
					{
						"name": "cookies-next",
						"message": "Don't manage cookies 'by hand', use redux state to interact with them"
					},
					{
						"name": "format-duration",
						"message": "Use wrapper"
					},
					{
						"name": "@mui/material",
						"importNames": ["Fade"],
						"message": "Use wrapper from 'components/fade'"
					},
					{
						"name": "@mui/icons-material",
						"message": "Use icons in 'src/components/icons'"
					}
				],
				"patterns": [
					{
						"group": ["@mui/icons-material/*"],
						"message": "Use icons in 'src/components/icons'"
					}
				]
			}
		]
	}
}
