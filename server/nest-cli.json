{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"watchAssets": true,
		"assets": ["public/*", "public/**/*"],
		"plugins": [
			{
				"name": "@nestjs/swagger",
				"options": {
					"dtoFileNameSuffix": [".dto.ts", ".entity.ts"]
				}
			}
		]
	}
}
