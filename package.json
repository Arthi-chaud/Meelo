{
  "name": "meelo",
  "version": "0.0.1",
  "description": "Personnal Music Server, for music collectors and records maniacs",
  "author": "Arthi-chaud",
  "private": true,
  "license": "GNU GENERAL PUBLIC LICENSE v3",
  "scripts": {
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test:db:up": "docker run -d --rm --env-file .env -p 5432:5432 --name test-db postgres:alpine3.16",
    "test:db:down": "docker container stop test-db",
    "test:db:migrate": "export POSTGRES_HOST=localhost; yarn run prisma migrate dev",
    "test": "export POSTGRES_HOST=localhost;  NODE_ENV=development jest -i",
    "test:cov": "export POSTGRES_HOST=localhost; NODE_ENV=development jest --coverage -i",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^2.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/swagger": "^6.0.4",
    "@prisma/client": "^4.1.0",
    "@taumechanica/stout": "^2.2.0",
    "@types/fluent-ffmpeg": "^2.1.20",
    "@types/normalize-path": "^3.0.0",
    "@types/sequelize": "^4.28.12",
    "@types/slug": "^5.0.3",
    "axios": "^0.27.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "eslint": "^8.17.0",
    "fluent-ffmpeg": "^2.1.2",
    "fs": "^0.0.1-security",
    "genius-lyrics-api": "^3.2.0",
    "jimp": "^0.16.1",
    "mime": "^3.0.0",
    "music-metadata": "^7.12.3",
    "mysql2": "^2.3.3",
    "normalize-path": "^3.0.0",
    "pg": "^8.7.3",
    "prisma": "^4.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "slug": "^5.3.0",
    "type-fest": "^3.1.0"
  },
  "resolutions": {
    "jpeg-js": "^0.4.4"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.19",
    "@nestjs/axios": "^0.0.8",
    "@nestjs/cli": "^8.2.6",
    "@nestjs/schedule": "^2.1.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.4.5",
    "@types/cron": "^2.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^27.2.5",
    "md5-file": "^5.0.0",
    "prettier": "^2.3.2",
    "prisma-types-generator": "^1.3.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "<rootDir>",
      "src"
    ],
    "modulePaths": [
      "<rootDir>",
      "src"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.(t|j)s"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "lcov"
    ],
    "testEnvironment": "node"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "compodoc": {
    "name": "Meelo Documentation",
    "output": "docs/generated",
    "customLogo": "./front/public/banner.png",
    "customFavicon": "./front/public/icon.png",
    "includes": "docs/",
    "exclude": [
      "front",
      "test/",
      "node_modules/",
      "docs/generated"
    ]
  }
}
